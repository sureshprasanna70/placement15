<div class="well col-lg-12">
  <h1><center><i class="mdi-action-home"></i> HOME</center></h1>
  <div class="col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="mdi-social-notifications-on"></i> News ticker</h3>
      </div>
      <div class="panel-body">
        <div class="ticker1">
          <div class="innerWrap">
            <%@notifications.each do |notification|%>
              <div class="list"><%=link_to notification do%>
                <%=notification.title%>-<%=notification.message%>
              <%end%> </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="mdi-action-event"></i> Placement Calendar</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <%= month_calendar previous_link: prev_month_link,next_link:next_month_link,table:{class:'table table-bordered'},events: @companies do |date, meetings| %>
            <%= date.strftime("%d") %>
            <% meetings.each do |meeting| %>
              <div>
                <%=link_to meeting do%> <%= meeting.name %> <%end%>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
