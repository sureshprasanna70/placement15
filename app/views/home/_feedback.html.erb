<div class="modal fade" id="feedbackModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Feedback</h4>
      </div> 
      <div class="modal-body">
        <form method="post" action="<%=send_feedback_path%>">
          <fieldset>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <div class="form-group">
              <label>From</label> 
              <%if user_signed_in?%>
                <input type="text" value="<%=current_user.email%>" name="from" readonly=true class="form-control" required="true"/>
              <%else%>
                <input type="text" value="" name="from" class="form-control" required="true"/>
             <%end%>

            </div>
            <div class="form-group">
              <label>To</label><input type="text" value="webmaster_cuic@gmail.com" readonly="true" class="form-control" required="true" />
            </div>
            <div class="form-group">
              <label>Roll no</label>
              <%if user_signed_in?%>
                <input type="text" name="<%=current_user.registerno%>" class="form-control" required="true" readonly="true"/>
              <%else%>
                <input type="text" name="registerno" class="form-control" required="true"/>

              <%end%>
            </div>

            <div class="form-group">
              <label>Subject</label>
              <input type="text" name="subject" class="form-control" required="true"/>
            </div>

            <div class="form-group">
              <label>Message</label>
              <textarea name="message" class="form-control" required="true"></textarea>
            </div>

            <input type="submit" value="Send feedback" class="btn btn-success"/>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
