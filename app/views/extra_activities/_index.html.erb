

<center><h1>Extra Activities</h1></center>
<%if not @extra_activities.nil?%>
<div>
  <%=link_to :back ,:class=>"btn btn-danger" do%>
    <i class="mdi-hardware-keyboard-arrow-left"></i> Back
  <%end%>
<br><br>
</div>
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Area of interest</th>
      <th>Extra curricular</th>
      <th>Hobby</th>
      <th>Responsibilty</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @extra_activities.each do |extra_activity| %>
      <tr>
        <td><%= extra_activity.area_of_interest %></td>
        <td><%= extra_activity.extra_curricular %></td>
        <td><%= extra_activity.hobby %></td>
        <td><%= extra_activity.responsibilty %></td>
        <td><%= link_to 'Edit', edit_extra_activity_path(extra_activity) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%else%>
<center><p class="message"><i class="mdi-alert-warning"></i>  No Activities yet</p></center>
<center>
  <%= link_to new_extra_activity_path,:class=>"btn btn-primary",:remote=>true do %>
  <i class="mdi-content-add"></i> Add
  <%end%>
</center>
<%end%>
