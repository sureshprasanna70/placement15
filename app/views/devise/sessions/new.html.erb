<div class="col-lg-3">
</div>
<div class="well col-lg-6">

  <center><h1><i class="mdi-action-input"></i> Log in</h1></center>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class=>"form-horizontal") do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.label :register_number %><br />
        <%= f.text_field :registerno, autofocus: true,:class=>"form-control",:data=>{:toggle=>"tooltip",:placement=>"bottom",:title=>"Your register number"}   %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off",:class=>"form-control" ,:data=>{:toggle=>"tooltip",:placement=>"bottom",:title=>"Password provided by your Placement Representative"} %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="togglebutton">
            <label>
              <input value="" name="user[remember_me]" id="user_remember_me" type="checkbox">
               <span class="toggle"></span> Remember me
            </label>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <button  type="submit" class="btn btn-success" ><span class="glyphicon glyphicon-log-in"></span> Log in</button>
      </div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
