<div class="well col-lg-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class=>"form-horizontal") do |f| %>
    <legend> Log in</legend>
    <fieldset>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true,:class=>"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off",:class=>"form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="togglebutton">
            <label>
              <input value="" name="user[remember_me]" id="user_remember_me" type="checkbox">
               <span class="toggle"></span> Remember me
            </label>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <button  type="submit" class="btn btn-success" ><span class="glyphicon glyphicon-log-in"></span> Log in</button>
      </div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
