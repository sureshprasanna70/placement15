
<center><h1><i class="mdi-image-landscape"></i> Projects</h1></center>
<%if @projects.size==0%>
  <center>  <p class="message"><i class="mdi-alert-warning"></i> No projects added till date</p>
  <%=link_to  new_project_path ,:class=>"btn btn-success",:remote=>true do%>
    <i class="mdi-content-add"></i> Add
  <%end%>
</center>
<%else%>

<div>
<%=link_to :back,:class=>"btn btn-danger" do%>
<i class="mdi-hardware-keyboard-arrow-left"></i> Back
<%end%>
<%= link_to  new_project_path ,:class=>"btn btn-success pull-right",:remote=>"true" do%>
  <i class="mdi-content-add"></i> New 
<%end%>
</div>
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Technology</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.desc %></td>
        <td><%= project.technology %></td>
        <td><%= link_to 'Edit', edit_project_path(project),:remote=>true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%end%>
</div>

