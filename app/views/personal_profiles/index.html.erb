<div class="well col-lg-6">
<p id="notice"><%= notice %></p>
<%if not @personal_profiles.nil?%>
<h1>Listing Personal Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Dob</th>
      <th>Age</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Guardian name</th>
      <th>Guardian occupation</th>
      <th>Nationality</th>
      <th>Mother tongue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @personal_profiles.gender %></td>
        <td><%=@personal_profiles.dob %></td>
        <td><%=@personal_profiles.age %></td>
        <td><%=@personal_profiles.height %></td>
        <td><%=@personal_profiles.weight %></td>
        <td><%=@personal_profiles.guardian_name %></td>
        <td><%=@personal_profiles.guardian_occupation %></td>
        <td><%=@personal_profiles.nationality %></td>
        <td><%=@personal_profiles.mother_tongue %></td>
        <td><%= link_to 'Show',@personal_profiles %></td>
        <td><%= link_to 'Edit', edit_personal_profile_path(@personal_profiles) %></td>
        <td><%= link_to 'Destroy',@personal_profiles, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>

<br>
<%else%>
  <center><i class="mdi-alert-warning"></i> No Personal Profile yet</center>
  <center>
    <%= link_to new_personal_profile_path,:class=>"btn btn-primary" do %>
    <i class="mdi-content-add"></i> Add
  <%end%>
</center>
<%end%>
</div>
