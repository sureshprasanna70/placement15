<h1><center><i class="mdi-maps-local-library"></i>College Profile</center></h1>
<%if @college_profiles.nil?%>

<center><p class="message"><i class="mdi-alert-warning"></i> No College Profile yet</p></center>
<center><%=link_to new_college_profile_path,:class=>"btn btn-primary" ,:remote=>true do%><i class="mdi-content-add"></i> Add<%end%>
  <%else%>
  <div>
    <%= link_to @college_profiles, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger pull-right" do%>
    <i class="mdi-action-delete"></i> Destroy
    <%end%>
    <%= link_to edit_college_profile_path(@college_profiles),:class=>"btn btn-large btn-success pull-right",:remote=>true do%> 
    <i class="mdi-editor-mode-edit"></i> Edit
    <%end%>
    <%= link_to :back,:class=>"btn btn-large btn-danger" do%> 
    <i class="mdi-hardware-keyboard-arrow-left"></i> Back
    <%end%>
  </div>
  <div class="well descline">
    You are <span class="studentname"><%=current_user.name%></span>
    Studying <span class="studentname"><%=@college_profiles.degree%>  <%=@college_profiles.branch%></span> and 
    in semester <span class="studentname"><%=@college_profiles.semester%></span> which is a <span class="studentname"> <%=@college_profiles.level%></span> degree<br>
  </div>
  <div class="well col-lg-12">
    <div class="col-md-6">
      <label>Level:</label>
      <%= @college_profiles.level %>
    </div>

    <div class="col-md-6">
      <label>Degree:</label>
      <%= @college_profiles.degree %>
    </div>
    <div class="col-md-6">
      <strong>Branch:</strong>
      <%= @college_profiles.branch %>
    </div>

    <div class="col-md-6">
      <strong>College:</strong>
      <%= @college_profiles.college %>
    </div>
    <div class="col-md-6">
      <strong>Semester:</strong>
      <%= @college_profiles.semester %>
    </div>

    <div class="col-md-6">
      <strong>Cgpa:</strong>
      <%= @college_profiles.cgpa %>
    </div>
  </div>
</div>
</div>
<div class="well col-lg-12">
  <dl class="dl-horizontal">
    <dt>Name</dt>
    <dd><%=current_user.name%></dd>
    <dt>Degree</dt>
    <dd><%=@college_profiles.degree%></dd>
    <dt>College</dt>
    <dd><%=@college_profiles.college%></dd>
    <dt>Semester</dt>
    <dd><%=@college_profiles.semester%></dd>
    <dt>Level</dt>
    <dd><%=@college_profiles.level%></dd>

  </dl>
</div>
<%end%>
