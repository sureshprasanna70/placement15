<%= form_for(@academic_detail) do |f| %>
  <% if @academic_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@academic_detail.errors.count, "error") %> prohibited from being saved:</h2>

      <div class="alert alert-danger">
      <% @academic_detail.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
      </div>
    </div>
  <% end %>
<%= link_to :back  ,:class=>"btn btn-danger" do%>
<i class="mdi-hardware-keyboard-arrow-left"></i> Back
<%end%>

<button type="submit" class="btn btn-primary pull-right"><i class="mdi-content-save"></i>Save</button>

  <div class="form-group">
    <%= f.label :course %><small>(Choose what only what is applicable)</small><br>
    <%= f.select :course,options_for_select([["SSLC","sslc"],["HSC","hsc"],["UG","ug"],["PG","pg"]]),:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :institution %><br>
    <%= f.text_area :institution ,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :examination_authority %><br>
    <%= f.text_field :examination_authority,:class=>"form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :pass_year %><br>
    <%= f.select :pass_year, (Time.zone.now.year - 20)..(Time.zone.now.year + 1),:class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :percentage %><br>
    <%= f.text_field :percentage ,:class=>"form-control" %>
  </div>
