<%= form_for(@extra_activity) do |f| %>
  <% if @extra_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@extra_activity.errors.count, "error") %> prohibited this extra_activity from being saved:</h2>

      <ul>
      <% @extra_activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :area_of_interest %><br>
    <%= f.text_area :area_of_interest,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :extra_curricular %><br>
    <%= f.text_area :extra_curricular,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :hobby %><br>
    <%= f.text_area :hobby,:class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :responsibilty %><br>
    <%= f.text_area :responsibilty,:class=>"form-control" %>
  </div>
  <div class="actions">
    <button type="submit" class="btn btn-success"><i class="mdi-content-save"></i> Save</button>
  </div>
<% end %>
